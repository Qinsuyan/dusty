{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/website/*"],
      "~/*": ["src/components/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.vue","src/**/*.ts", "src/**/*.d.ts", "*.ts","*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
